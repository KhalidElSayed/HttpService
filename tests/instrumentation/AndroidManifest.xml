<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:a="http://schemas.android.com/apk/res/android"
	package="novoda.lib.httpservice.tester"
	a:name="HttpServiceTester"
	a:versionCode="1"
	a:versionName="1.0">

	<uses-permission a:name="android.permission.INTERNET" />
	<uses-permission a:name="android.permission.ACCESS_NETWORK_STATE" />

	<uses-sdk a:minSdkVersion="7" />

	<application
		a:label="@string/app_name"
		a:name=".HttpServiceTester"
		a:theme="@android:style/Theme.NoTitleBar">			
			
		<!--
			===================================================== 
			Activities
			=====================================================
		-->
		<activity
			a:screenOrientation="portrait"
			a:name=".activity.DashboardActivity">
			<intent-filter>
				<action a:name="android.intent.action.MAIN" />
				<category a:name="android.intent.category.DEFAULT" />
				<category a:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
		<!--
			===================================================== 
			Services
			=====================================================
		-->
		<service a:name=".service.SimpleHttpService">
			<intent-filter>
				<action a:name="novoda.lib.httpservice.tester.action.ACTION_REQUEST" />		
				<data a:scheme="http" />
				<data a:scheme="https" />		
			</intent-filter>
            <meta-data a:name="actorXmlFile" a:value="actors.xml"/>
		</service>
      
	</application>
</manifest> 