<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
   xmlns:a="http://schemas.android.com/apk/res/android"
   a:layout_width="fill_parent"
   a:layout_height="fill_parent"
   a:orientation="vertical"
   a:background="#fff">
   <TextView
      a:text="@string/dashboard_title"
      style="@style/TitleHeader" />
   <LinearLayout
      style="@style/DashboardRow">
      <TextView
         a:id="@+id/monitorInfo"
         a:layout_width="wrap_content"
         a:layout_height="wrap_content" />
   </LinearLayout>
   <LinearLayout
      style="@style/DashboardRow">
      <EditText
         a:id="@+id/requestNumber"
         a:minWidth="100dip"
         a:layout_width="wrap_content"
         a:layout_height="wrap_content" />
      <Button
         a:id="@+id/start"
         a:text="Start"
         a:layout_width="wrap_content"
         a:layout_height="wrap_content" />
      <!--
         <Button android:id="@+id/startDouble" android:text="Same url"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
      -->
   </LinearLayout>
   <LinearLayout
      style="@style/DashboardRow">
      <Button
         a:id="@+id/startMonitor"
         a:text="Start monitor"
         a:layout_width="wrap_content"
         a:layout_height="wrap_content" />
      <Button
         a:id="@+id/stopMonitor"
         a:text="Stop monitor"
         a:layout_width="wrap_content"
         a:layout_height="wrap_content" />
      <!--
         <Button android:id="@+id/log" android:text="Enable/Disable
         logs" android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
      -->
   </LinearLayout>
</LinearLayout>